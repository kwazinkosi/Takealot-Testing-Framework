<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Takealot Suite">
    <listeners>
        <!-- Register listeners for setup and reporting -->
        <listener class-name="utilities.TestSetup"/>
        <listener class-name="reporting.ReportManager"/>
    </listeners>

    <test name="Takealot Automation Tests" thread-count="4" parallel="tests">
        <classes>
            <!-- Specify your test classes here -->
            <class name="tests.HomePageTest"/>
            <class name="tests.ProductsPageTest"/>
            <class name="tests.RegistrationPageTest"/>
            <class name="tests.LoginPageTest"/>
            
            <!--No succesful checkout implentation because that requires valid login details-->
            <!--<class name="tests.CheckoutPageTest">
				<methods>
					<exclude name="verifyCheckout"/>
				</methods>
			</class>-->
			
        </classes>
    </test>
</suite>
